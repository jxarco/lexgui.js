{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "outDir": "build/ts",               // TS output folder
    "rootDir": "src",
    "declaration": true,                // generate .d.ts for TS users
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules", "examples", "docs", "data"]
}
