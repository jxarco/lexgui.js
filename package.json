{
    "name": "lexgui",
    "version": "0.7.12",
    "description": "JS library to create web graphical user interfaces",
    "type": "module",
    "main": "./build/lexgui.js",
    "module": "./build/lexgui.module.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jxarco/lexgui.js"
    },
    "files": [
        "build",
        "examples",
        "LICENSE",
        "package.json",
        "changelog.md",
        "README.md",
        "demo.js"
    ],
    "keywords": [
        "lexgui",
        "typescript",
        "javascript",
        "editor",
        "gui",
        "interface",
        "canvas",
        "svg",
        "html5"
    ],
    "author": "jxarco",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jxarco/lexgui.js/issues"
    },
    "scripts": {
        "clean:css": "rimraf build/lexgui.css",
        "clean": "rimraf build",
        "build:js": "rollup -c rollup.js.build.config.js",
        "build:ts": "tsc --project tsconfig.json",
        "bundle:ts": "rollup -c rollup.ts.build.config.js",
        "build:css": "concat-cli -f css/*.css -o build/lexgui.css && cleancss -o build/lexgui.min.css build/lexgui.css",
        "build": "npm run bundle:ts && npm run build:ts && npm run build:css",
        "build:esm": "npm run bundle:ts"
    },
    "devDependencies": {
        "clean-css-cli": "^5.6.3",
        "concat-cli": "^4.0.0",
        "rimraf": "^5.0.10",
        "rollup-plugin-import-css": "^4.1.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.36.0",
        "typescript": "^5.9.3"
    }
}
