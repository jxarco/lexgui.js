{
    "name": "lexgui",
    "version": "0.7.12",
    "description": "JS library to create web graphical user interfaces",
    "type": "module",
    "main": "./build/lexgui.js",
    "module": "./build/lexgui.module.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jxarco/lexgui.js"
    },
    "files": [
        "build",
        "build/extensions",
        "examples",
        "LICENSE",
        "package.json",
        "changelog.md",
        "README.md",
        "demo.js"
    ],
    "keywords": [
        "lexgui",
        "lexgui.js",
        "javascript",
        "editor",
        "gui",
        "interface",
        "canvas",
        "svg",
        "html5"
    ],
    "author": "jxarco",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jxarco/lexgui.js/issues"
    },
    "scripts": {
        "build:js": "rollup -c rollup.js.build.config.js",
        "build:ts": "rollup -c rollup.ts.build.config.js",
        "min-css": "cleancss -o css/lexgui.min.css css/lexgui.css",
        "build": "npm run min-css && npm run build:js && npm run build:ts",
        "clean": "rimraf build"
    },
    "devDependencies": {
        "rimraf": "^5.0.10",
        "rollup-plugin-import-css": "^4.1.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.36.0",
        "typescript": "^5.9.3"
    }
}
